FROM node:18-alpine
WORKDIR /app

# Copia i file di configurazione e installa le dipendenze
COPY package.json package-lock.json ./
RUN npm install

# Copia tutto il codice sorgente (in particolare la cartella src contenente proxy-server.mjs)
COPY . .

# Espone la porta usata dal server proxy (il tuo proxy-server.mjs imposta la porta a 3001 di default)
EXPOSE 3001

# Avvia il server proxy
CMD ["node", "src/proxy-server.mjs"]
